generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String
  subject   String
  message   String
  createdAt DateTime @default(now())
}

model Quote {
  id          String   @id @default(uuid())
  name        String
  company     String?
  email       String
  phone       String
  serviceType String
  budget      String?
  description String
  deadline    String?
  createdAt   DateTime @default(now())
}
